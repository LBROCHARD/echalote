    "rehype-react": "^8.0.0",
    "rehype-stringify": "^10.0.1",
    "release-it": "^19.0.3",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
