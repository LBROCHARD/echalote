{
  "extends": "./tsconfig.app.json", 
  "compilerOptions": {
    "baseUrl": ".", 
    "paths": {
      "@/*": ["./src/*"] 
    },
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/test/**/*.ts",
    "src/test/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}